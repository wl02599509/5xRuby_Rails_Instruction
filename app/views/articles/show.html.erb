<h1><%= @article.title %></h1>

<p>
  <% if is_locked?(@article) %>
    <%= form_with url: unlock_article_path(@article), method: "patch" do |form| %>
      <% form.label :pin_code %>
      <%= form.text_field :pin_code %>
      <%= form.submit "解鎖" %>
    <% end %>
  <% else %>
    <%= @article.content %>
  <% end %>
</p>


<h1><%= @article.title %></h1>

<p>
  <% if @article.pin_code.present? %>
    <% if session[:unlock_articles]&.include?(params[:id].to_i) %>
      <%= @article.content %>
    <% else %>
      <%= form_with url: unlock_article_path(@article), method: "patch" do |form| %>
        輸入密碼：<%= form.text_field :pin_code %>
        <%= form.submit "解鎖" %>
      <% end %>
    <% end %>
  <% else %>
    <%= @article.content %>
  <% end %>
</p>

<%= link_to "返回", blogs_path %>
<h1>文章列表</h1>

<%= render "partial_render_demo/ad", ad_color: @ad_color_red %>

<%= render "partial_render_demo/ad", ad_color: @ad_color_green %>

<%= render "partial_render_demo/ad", ad_color: @ad_color_orange %>


<%= link_to "新增文章", new_blog_path %>

<table>
  <thead>
    <tr>
      <td>標題</td>
      <td>其他功能</td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td>
        <%= "O  " if article.pin_code.present? %>
        <%= link_to article.title, article %>
      </td>
      <td>
        <%= link_to "編輯", edit_article_path(article) %>
        <%= link_to "刪除", article, method: 'DELETE', data: {confirm: 'Are you sure about that ???'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


